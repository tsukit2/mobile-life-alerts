<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:gravity="right"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:orientation="vertical">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/summary_actions" />  
		         	
	<LinearLayout
    	android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="right"
        android:orientation="horizontal">
	        <TextView
	        	 android:id="@+id/summary_emergency_detected"
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:paddingBottom="10dip"
		         android:textSize="24dip"
		         android:textStyle="bold"
		         android:textColor="#0F0"
		         android:text="@string/summary_emergency_detected" />    
    </LinearLayout>
	<LinearLayout
    	android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="right"
        android:orientation="horizontal">
	        <TextView
	        	 android:id="@+id/summary_emergency_num_called"
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:paddingBottom="10dip"
		         android:textSize="24dip"
		         android:textStyle="bold"
		         android:textColor="#0F0"
		         android:text="@string/summary_emergency_num_called" />    
    </LinearLayout>
	<LinearLayout
    	android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="right"
        android:orientation="horizontal">
	        <TextView
	        	 android:id="@+id/summary_911_called"
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:paddingBottom="10dip"
		         android:textSize="24dip"
		         android:textStyle="bold"
		         android:textColor="#0F0"
		         android:text="@string/summary_911_called" />    
    </LinearLayout>        
	<LinearLayout
    	android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="right"
        android:orientation="horizontal">
	        <TextView
	        	 android:id="@+id/summary_email_sent"
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:paddingBottom="10dip"
		         android:textSize="24dip"
		         android:textStyle="bold"
		         android:textColor="#0F0"
		         android:text="@string/summary_email_sent" />    
    </LinearLayout>    
</LinearLayout>