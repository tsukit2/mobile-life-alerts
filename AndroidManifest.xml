<?xml version="1.0" encoding="utf-8"?>
<manifest
   xmlns:android="http://schemas.android.com/apk/res/android"
   package="com.lifealert">

   <application
      android:icon="@drawable/icon"
      android:theme="@android:style/Theme.Dark">

      <activity
         class=".activity.ConfigurationActivity"
         android:label="@string/app_name">
         <intent-filter>
            <action android:value="android.intent.action.MAIN" />
            <category android:value="android.intent.category.LAUNCHER" />
         </intent-filter>
      </activity>

      <activity
         class=".activity.LifeAlerts_ChateActivity"
         android:label="@string/app_name">
      </activity>

      <activity
         class=".activity.SelectContactInfoActivity"
         android:label="@string/select_emergency" />

      <activity
         class=".activity.SensitivityTestActivity"
         android:label="@string/app_name" />

      <activity
         class=".activity.ShakeAlertActivity"
         android:label="@string/app_name" />

      <activity
         class=".activity.CallForHelpActivity"
         android:label="@string/app_name" />

      <service class=".service.ShakeDetectorService" />

   </application>

   <uses-permission id="android.permission.READ_CONTACTS" />
   <uses-permission id="android.permission.WRITE_CONTACTS" />
   <uses-permission id="android.permission.CALL_PHONE" />
   <uses-permission id="android.permission.INSTALL_PACKAGES" />
</manifest>
